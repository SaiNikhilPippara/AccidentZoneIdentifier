<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginWelcome">

    <Button
        android:id="@+id/buttonAccount"
        android:layout_width="130dp"
        android:layout_height="82dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="149dp"
        android:onClick="AccountBTN"
        android:text="Account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDashboard"
        android:layout_width="154dp"
        android:layout_height="80dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="148dp"
        android:onClick="dashboardBTN"
        android:text="Dashboard"
        app:layout_constraintStart_toEndOf="@+id/buttonAccount"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonProne"
        android:layout_width="177dp"
        android:layout_height="88dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="116dp"
        android:onClick="proneBTN"
        android:text="Accident Prone Area"
        app:layout_constraintBottom_toTopOf="@+id/buttonLogout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAccount" />

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="93dp"
        android:layout_height="66dp"
        android:layout_marginStart="162dp"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="220dp"
        android:onClick="logoutBTN"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>