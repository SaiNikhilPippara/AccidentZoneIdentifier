<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityProneAreas">

    <TextView
        android:id="@+id/StartPointT"
        android:layout_width="54dp"
        android:layout_height="36dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="265dp"
        android:text="Start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="356dp"
        android:layout_marginEnd="50dp"
        android:text="Destination"
        app:layout_constraintEnd_toStartOf="@+id/editDest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/GetRouteBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="157dp"
        android:text="Get Route"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editDest" />

    <EditText
        android:id="@+id/EditStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="57dp"
        android:layout_marginTop="258dp"
        android:ems="10"
        android:hint="Enter Start Point"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/StartPointT"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editDest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="183dp"
        android:layout_marginTop="343dp"
        android:layout_marginBottom="343dp"
        android:ems="10"
        android:hint="Enter Destination Point"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>